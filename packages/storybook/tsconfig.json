{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": false,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "types": ["vite/client"],
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": ["node_modules", "storybook-static"]
}